<h1>Sign Up</h1>
<!-- CN: Consider making a partial and rendering the partial in the application layout to DRY this up. -->
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <div><%= error %></div>
  <%end%>
<%end%>
<br>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Create Account" %>
<%end%>
